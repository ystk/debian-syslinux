#!/bin/sh

. /usr/share/debconf/confmodule

log() {
	logger -t syslinux-installer "$@"
}

if [ -f /proc/lvm ]; then
	log "syslinux not yet installable on LVM"
	exit 1
fi

if [ -d /sys/firmware/efi ]; then
	log "syslinux not yet usable on Intel-based Macs booted using EFI"
	exit 1
fi

db_get syslinux-installer/skip
if [ "$RET" = true ]; then
	exit 1
fi

exit 0
